{
  "name": "projector-karma",
  "version": "0.0.0",
  "description": "Projector wrapper for Karma Test Runner",
  "main": "index.js",
  "files": ["index.js", "types.js"],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint:flow": "flow",
    "lint:staged": "lint-staged"
  },
  "author": "Stanislav Sysoev <@d4rkr00t>",
  "license": "MIT",
  "peerDependencies": {
    "karma": ">= 1.7.0 < 2"
  },
  "devDependencies": {
    "flow-bin": "^0.53.1",
    "jest": "^20.0.4",
    "karma": "^1.7.1",
    "lint-staged": "^4.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3"
  },
  "pre-commit": ["lint:flow", "test:coverage", "lint:staged"],
  "lint-staged": {
    "*.js": ["prettier --write --print-width 120", "git add"]
  },
  "jest": {
    "collectCoverageFrom": ["*.js"]
  }
}
